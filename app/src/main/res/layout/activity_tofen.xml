<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorbglight"
    tools:context=".tofen">

    <FrameLayout
        android:layout_width="303dp"
        android:layout_height="329dp"
        android:layout_x="51dp"
        android:layout_y="129dp">

    <ImageView
        android:id="@+id/tofen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="-3dp"
        android:layout_y="-22dp"
        android:visibility="gone"
        app:srcCompat="@drawable/emediimg" />

        <ImageView
            android:id="@+id/tofen1"
            android:layout_width="match_parent"
            android:layout_height="353dp"
            android:layout_x="2dp"
            android:layout_y="134dp"
            app:srcCompat="@drawable/amediimg" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="320dp"
        android:layout_height="88dp"
        android:layout_x="45dp"
        android:layout_y="472dp"
        android:text="Tofen is a preparation of Ketotifen,which has antiallergic properties.It prevents Asthematic attacks,Symptomatic treatment of bronchial asthama and allergic conditions."
        android:textSize="15dp" />

    <Button
        android:id="@+id/cartButton3"
        android:layout_width="152dp"
        android:layout_height="63dp"
        android:layout_x="212dp"
        android:layout_y="577dp"
        android:background="@drawable/round_button"
        android:text="Add To Cart"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/tofenlist"
        android:layout_width="147dp"
        android:layout_height="63dp"
        android:layout_x="31dp"
        android:layout_y="577dp"
        android:background="@drawable/round_button"
        android:text="Go To List"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/webbutton"
        android:layout_width="147dp"
        android:layout_height="63dp"
        android:layout_x="31dp"
        android:layout_y="648dp"
        android:background="@drawable/round_button"
        android:text="For more info"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/gotoCart3"
        android:layout_width="153dp"
        android:layout_height="63dp"
        android:layout_x="212dp"
        android:layout_y="649dp"
        android:background="@drawable/round_button"
        android:text="View Cart"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/nameTocart3"
        android:layout_width="197dp"
        android:layout_height="44dp"
        android:layout_x="57dp"
        android:layout_y="54dp"
        android:text="Tofen"
        android:textSize="30dp"
        android:textStyle="bold" />

</AbsoluteLayout>